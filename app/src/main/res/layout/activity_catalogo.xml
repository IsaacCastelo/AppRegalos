<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pastel"
    android:orientation="vertical"
    tools:context=".InicioTienda">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:padding="30dp"
            android:rowCount="3"
            android:useDefaultMargins="true">

            <ImageButton
                android:layout_width="143dp"
                android:layout_height="189dp"
                android:layout_row="0"
                android:layout_column="0"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/detallesbtn" />

            <ImageButton
                android:layout_width="146dp"
                android:layout_height="184dp"
                android:layout_row="0"
                android:layout_column="1"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/globosbtn" />

            <ImageButton
                android:layout_width="138dp"
                android:layout_height="169dp"
                android:layout_row="1"
                android:layout_column="0"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/peluchesbtn" />

            <ImageButton
                android:layout_width="144dp"
                android:layout_height="175dp"
                android:layout_row="1"
                android:layout_column="1"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/regalosbtn" />

            <ImageButton
                android:layout_width="131dp"
                android:layout_height="195dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/tazabtn" />

        </GridLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:background="@color/navbar"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/Inicio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:layout_weight="1"
            android:contentDescription="Inicio"
            android:src="@drawable/ic_inicio"
            android:onClick="onInicioClick" />

        <ImageButton
            android:id="@+id/Catalogo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:layout_weight="1"
            android:contentDescription="CatÃ¡logo"
            android:src="@drawable/ic_catalogo" />

        <ImageButton
            android:id="@+id/Ofertas"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:layout_weight="1"
            android:contentDescription="Ofertas"
            android:src="@drawable/ic_ofertas"
            android:onClick="onOfertasClick" />

        <ImageButton
            android:id="@+id/Carrito"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:layout_weight="1"
            android:contentDescription="Carrito"
            android:src="@drawable/ic_carrito"
            android:onClick="onCarritoClick" />

        <ImageButton
            android:id="@+id/Perfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:layout_weight="1"
            android:contentDescription="Perfil"
            android:src="@drawable/ic_perfil"
            android:onClick="onPerfilClick" />

    </LinearLayout>

</LinearLayout>


